{
  "compilerOptions": {
    "target": "es6",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "core",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": false,
    "importHelpers": true,
    "removeComments": true,
    "noLib": false,
    "sourceMap": false,
    "lib": ["es7"]
  },
  "exclude": ["test", "app.module.ts", "app.service.ts", "node_modules"]
}
